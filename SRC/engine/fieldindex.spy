from ooflib.common import debug

def _SymTensorIJComponents__iter__(self):
    beginp = self.begin()
    endp = self.end()
    while beginp != endp:
        yield beginp.fieldindex()
        beginp.increment()
        
SymTensorIJComponents.__iter__ = _SymTensorIJComponents__iter__

def _Components__iter__(self):
    beginp = self.begin()
    endp = self.end()
    while beginp != endp:
        yield beginp.current()
        beginp.increment()

Components.__iter__ = _Components__iter__

